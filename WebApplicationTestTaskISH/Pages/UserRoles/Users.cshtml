@page
@model WebApplicationTestTaskISH.Pages.UserRoles.UsersModel
@{
    ViewData["Title"] = "Users";
    ViewData["ShowButtons"] = true;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Искать</button>
        </div>
    </div>
</form>

@*@await Component.InvokeAsync("HeadCount")*@
<vc:head-count user-role="@null"></vc:head-count>

<h1>Users</h1>
@*<h3>Всего пользователей: @Model.Users.Count()</h3>*@

<div class="row">
    @foreach (var item in Model.Users)
    {
        <div class="col-12 col-sm-6 col-lg-4">
            <partial name="_DisplayUsersPartial" model="item"  view-data="ViewData"/>
        </div>
    }
</div>