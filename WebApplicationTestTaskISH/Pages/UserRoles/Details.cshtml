@page
@model WebApplicationTestTaskISH.Pages.UserRoles.DetailsModel
@{
    ViewData["Title"] = "User details";
    var photoPath = $"/images/{Model.User.PhotoPath ?? "noimage.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.User.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">User ID: @Model.User.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Email: @Model.User.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Role:
                            <span class="text-danger font-weight-bold">
                                @Model.User.Role
                            </span>   
                        </h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color: #dle7ff" src="@photoPath" asp-append-version="true"/>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                            <a asp-page="Users" class="btn btn-success buttonShadow">Назад</a>
                            <a href="#" class="btn btn-primary buttonShadow">Редактировать</a>
                            <a href="#" class="btn btn-danger buttonShadow">Удалить</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>